{
  "name": "glyph-codec",
  "version": "0.3.0",
  "description": "GLYPH v2.6 - Token-efficient serialization for LLM communication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stream": {
      "require": "./dist/stream/index.js",
      "types": "./dist/stream/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "glyph",
    "serialization",
    "llm",
    "json",
    "codec",
    "token-efficient",
    "streaming",
    "gs1",
    "sjson"
  ],
  "author": "phenomenon0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenomenon0/Agent-GO.git",
    "directory": "sjson/glyph-js"
  },
  "homepage": "https://github.com/phenomenon0/Agent-GO/tree/main/sjson/glyph-js#readme",
  "bugs": {
    "url": "https://github.com/phenomenon0/Agent-GO/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
